{
  "next": [
    {
      "run_when_any" : [
        "push",
        "pull_request",
        "release"
      ],
      "build" : "proxy",
      "build_in" : "image",
      "config" : {
        "clear_build_path" : false,
        "proxy" : "../../config/local.json",
        "next" : [
          {
            "run_when_any" : [
              "release"
            ],
            "build" : "docker_publish",
            "build_in" : "./",
            "config" : {
              "image_name": "eons/guest.img"
            }
          }
        ]
      }
    },
    {
      "run_when_any" : [
        "schedule"
      ],
      "build" : "proxy",
      "build_in" : "./",
      "config" : {
        "clear_build_path" : false,
        "proxy" : "../../config/schedule.json"
      }
    }
  ]
}